/* components/musicSheet/musicSheet.wxss */
@import "../../assets/icon/iconfont.wxss";

.playall {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 12rpx;
  height: 80rpx;
}

.playall-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.playall-left .icon {
  margin: 0 20rpx 0 8rpx;
  font-size: 45rpx;
}

.playall-left .text {
  font-size: 32rpx;
}

.playall-left .description {
  font-size: 27rpx;
  color: #aeb3b9;
}

.playall-right {
  display: flex;
  align-items: center;
  background-color: red;
  border-radius: 40rpx;
  padding: 0rpx 20rpx;
}

.playall-right .text {
  color: #fff;
  font-size: 26rpx;
}

.playlist {
  padding: 0rpx 20rpx;
}

.playlist-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx
}

.playlist-itemleft {
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  align-items: center;
}

.playlist-itemleft .index {
  min-width: 50rpx;
  max-width: 50rpx;
  text-align: center;
  margin-right: 35rpx;
  font-size: 35rpx;
  color: #909399;
}

.playlist-itemleft .descirption {
  color: #909399;
  font-size: 22rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.playlist-itemleft .title{
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.playlist-itemright {
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  min-width: 120rpx;
  max-width: 120rpx;
  margin-left: 15rpx;
}

.playlist-itemright .icon{
  font-size: 50rpx;
  color: #C0C4CC
}
