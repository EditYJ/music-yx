/* components/playlist/playlist.wxss */
.playlist-container {
  position: relative;
  width: 222rpx;
  margin: 15rpx;
}

.playlist-image {
  width: 100%;
  height: 222rpx;
  border-radius: 15rpx;
}

.playlist-playcount {
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.5);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 26rpx;
}

.playlist-name {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}