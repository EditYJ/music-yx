/* components/playlist/playlist.wxss */
@import "../../assets/icon/iconfont.wxss";

.playlist-container {
  position: relative;
  width: 222rpx;
  margin: 15rpx;
}

.playlist-image {
  width: 100%;
  height: 222rpx;
  border-radius: 15rpx;
}

.playlist-icon{
  font-size: 23rpx;
  margin-right: 4rpx;
}

.playlist-playcount {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 23rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.5);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
}


.playlist-name {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}