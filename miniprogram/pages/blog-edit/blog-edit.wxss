/* pages/blog-edit/blog-edit.wxss */
.container {
  padding: 20rpx;
}

.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap {
  height: 220rpx;
  width: 220rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
  line-height: 220rpx;
}

.selectphoto {
  border: #aeb3b9 dashed 2px;
}

.footer {
  display: flex;
  position: fixed;
  flex-direction: row-reverse;
  bottom: 0;
  right: 0;
  align-items: center;
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #f1f1f1;
}

.send-btn {
  background-color: #409EFF;
  border-radius: 5px;
  padding: 12rpx 24rpx;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}