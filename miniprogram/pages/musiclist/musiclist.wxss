/* pages/musiclist/musiclist.wxss */
page{height:100%;}
.background-container {
  height: 500rpx;
  position: absolute;
  width: 100%;
  filter: blur(40rpx);
  opacity: 0.4;
  top: 0;
  left: 0;
  z-index: -1;
}

.background-mask{
  height: 500rpx;
  position: absolute;
  width: 100%;
  background-color: rgb(65, 65, 65);
  top: 0;
  left: 0;
  z-index: -2;
}

.container{
  height: 100%;
  width: 100%;
  /* display: flex;
  flex-direction: column; */
  /* padding-top: 50px; */
}

.musiclistInfo {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  margin: 15rpx;
}

.musiclistInfo-top {
  display: flex;
  flex-direction: row;
  height: 250rpx;
  margin: 20rpx;
}

.musiclistInfo-topleft image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 15rpx;
}

.musiclistInfo-topright {
  margin-left: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.musiclistInfo-topright .name {
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.musiclistInfo-topright .creator {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.musiclistInfo-topright .creator image {
  height: 46rpx;
  width: 46rpx;
  border-radius: 23rpx;
  margin-right: 20rpx;
}

.musiclistInfo-topright .creator .nickname {
  color: rgb(207, 212, 221);
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}


.musiclistInfo-topright .description {
  color: #aeb3b9;
  font-size: 22rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.musiclistInfo-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
}

.musiclistInfo-bottom .item{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.musiclistInfo-bottom .text{
  font-size: 23rpx;
  color: rgb(207, 212, 221);
}

.musiclistInfo-bottom .icon{
  font-size: 47rpx;
  color: #fff;
}

.musiclist{
  border-radius: 33rpx 33rpx 0 0;
  width: 100%;
  background-color: #fff;
}